<html lang="en">
  <head>
    <meta charset=utf-8>
    <title>MakersBnB</title>
    <link rel="stylesheet" type="text/css" href="styles-login.css">
  </head>
  <body>
    <h1 class='title'>Welcome to Makers BnB</h1>
    <h3 class='sub-title'>Please Sign Up</h3>
    <form action="/" method="get">
      <button type="submit" id="btn2">Go Back</button>
    </form>
    <div class='login-signup'>
      <h4>Enter your details below...</h4>
      <form action="/signup" method="post">
        <div class="container">
          <label for="name">Name</label>
          <br>
          <input type="text" placeholder="Enter Fullname" name="name" id="Name" required>
          <br>
          <label for="email_address">Email</label>
          <br>
          <input type="email" placeholder="Enter Email" name="email_address" id="Email" required>
          <br>
          <label for="phone_number">Phone Number</label>
          <br>
          <input type="text" placeholder="+44..." name="phone_number" id="Email" required>
          <br>
          <label for="password" class='white-text'>Password</label>
          <br>
          <input type="password" placeholder="Enter Password" name="password" id="Pass" required>
          <br>
          <div> <%= @message unless @message.nil? %> </div>
          <div class="btn-container">
            <button type="submit" id="btn2">Create Account</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>